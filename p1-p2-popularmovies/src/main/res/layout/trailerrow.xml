<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/trailerPlayBtn"
        android:background="@drawable/ic_play_circle_filled_black_48dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/trailerPlayBtn"
        android:layout_marginLeft="24dp"
        android:layout_centerVertical="true"
        android:textColor="@color/colorTextTranslucent"
        android:id="@+id/trailerTitle"/>
</RelativeLayout>